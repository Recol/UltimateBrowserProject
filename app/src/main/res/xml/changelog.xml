        <change type="bug">Fixed Google Play linking bug.</change>
        <change type="bug">Fixed Minor Bugs.</change>
        <change type="improvement">Increased exit time to 1800 from 512.</change>
    </release>
    <release version="1.3.6" versioncode="30" releasedate="June 18th 2015" summary="Major Release">
