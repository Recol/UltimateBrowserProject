<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rey.material.widget.EditText
        android:id="@+id/dialog_sign_in_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_20dp"
        android:layout_marginRight="@dimen/layout_margin_20dp"
        android:hint="@string/dialog_sign_in_username"
        android:textColor="@color/text"
        android:textSize="@dimen/text_size_16sp"
        android:textCursorDrawable="@null"
        android:singleLine="true"
        android:ellipsize="none"
        android:inputType="text|textNoSuggestions"
        app:et_labelEnable="true"
        app:et_dividerHeight="2dp"
        app:et_dividerColor="@color/blue_600"
        app:et_supportSingleLine="true"
        app:et_supportTextColor="@color/text"
        app:et_dividerAnimDuration="560"
        app:et_labelInAnim="@anim/abc_fade_in"
        app:et_labelOutAnim="@anim/abc_fade_out"
        app:et_labelTextColor="@color/blue_600">
    </com.rey.material.widget.EditText>

    <com.rey.material.widget.EditText
        android:id="@+id/dialog_sign_in_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_20dp"
        android:layout_marginRight="@dimen/layout_margin_20dp"
        android:hint="@string/dialog_sign_in_password"
        android:textColor="@color/text"
        android:textSize="@dimen/text_size_16sp"
        android:textCursorDrawable="@null"
        android:singleLine="true"
        android:ellipsize="none"
        android:inputType="textPassword|textNoSuggestions"
        app:et_labelEnable="true"
        app:et_dividerHeight="2dp"
        app:et_dividerColor="@color/blue_600"
        app:et_supportSingleLine="true"
        app:et_supportTextColor="@color/text"
        app:et_dividerAnimDuration="560"
        app:et_labelInAnim="@anim/abc_fade_in"
        app:et_labelOutAnim="@anim/abc_fade_out"
        app:et_labelTextColor="@color/blue_600">
    </com.rey.material.widget.EditText>

</LinearLayout>